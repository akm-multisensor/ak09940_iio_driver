	fragment@1 {
		target = <&i2c1>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			ak5704@10 {
				#sound-dai-cells = <0>;
				compatible = "akm,ak09970";
				reg = <0x10>;
				ak5704,pdn-gpio = <&gpio 4 0>;
				status = "okay";
			};
		};

	};

};
 
